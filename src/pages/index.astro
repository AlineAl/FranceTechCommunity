---
import Layout from "../layouts/Layout.astro";
import Header from "../components/astro/Header.astro";
import { getCollection } from "astro:content";
import { CommunitiesList } from "../components/react/List/CommunitiesList";
import Footer from "../components/astro/Footer.astro";
export const prerender = true;
const communities = await getCollection("communities");

const titleHtml = `France <span class="text-[#766CE2]">Tech</span> Community`;
---

<Layout>
  <Header
    title={titleHtml}
    description="Retrouvez toutes les communautés tech de France et les événements qu'elles organisent"
  />
  <CommunitiesList client:only="react" communities={communities} />
  <Footer />
</Layout>
